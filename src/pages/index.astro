---
import Layout from "../layouts/Layout.astro";
import Section from "@components/Section.astro";
import Card from "@components/Card.astro";
---

<Layout title="Simulaciones de ecosistemas">
  <main class="min-w-xs max-w-[90%] mx-auto mb-4 lg:max-w-[1000px]">
    <h1 class="text-4xl text-center font-bold my-4">
      Simulaciones de ecosistemas
    </h1>
    <Section title="Modelos ecológicos">
      <ol class="grid gap-2 md:grid-cols-2 list-decimal">
        <Card
          title="Tanque de drenaje"
          href="ecological-models/draining-tank"
        />
        <Card
          title="Crecimiento logístico"
          href="ecological-models/logistic-growth"
        />
        <Card
          title="Competencia de dos poblaciones en crecimiento exponencial"
          href="ecological-models/compete"
        />
        <Card title="Existencia Cooperativa" href="ecological-models/coop" />
        <Card
          title="Competencia por fuentes limitadas"
          href="ecological-models/exclus"
        />
        <Card
          title="Dos poblaciones con interacciones competitivas"
          href="ecological-models/interact"
        />
        <Card
          title="Oscilación Presa-Depredador"
          href="ecological-models/oscillat"
        />
        <Card title="Producción neta" href="ecological-models/netprod" />
        <Card title="Acuario abierto" href="ecological-models/openaq" />
        <Card title="Pulsar y reciclar" href="ecological-models/pulse" />
        <Card title="Pantano salino" href="ecological-models/saltmrsh" />
        <Card title="Fuego" href="ecological-models/fire" />
        <Card title="climax" href="ecological-models/climax" />
      </ol>
    </Section>
  </main>
</Layout>
